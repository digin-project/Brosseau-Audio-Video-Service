<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="utf-8" />
<meta name="keywords" content="Brosseau audio video">
<title>Brosseau | <%= @title %></title>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "brands_slider" %>
  <link href="stylesheets/<%=t :localize_css%>.css" rel="stylesheet" />
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script> 
<![endif]-->
<!--[if IE]>
   <link href="stylesheets/style_ie.css" rel="stylesheet" />
<![endif]-->
</head>
<body id="<%= @body_id %>">
	
	<!-- BEGIN HEADER -->
	<div id="header">
		
		<!-- CENTRAL HEADER -->
		<div id="central_header">	
			
			<header id="main">
				<h1 id="logo"><%=link_to "", root_path%></h1>
				<p id="phone">1 888 678 3430</p>
				<p id="social">
					<%=link_to "Facebook", "", :target => "_blank" %>
					<%=link_to "Twitter", "", :target => "_blank" %>
				</p>
				<p id="i18n">
					<%= link_to 'FR', url_for( :locale => 'fr_CA' )%>
					| 
					<%= link_to 'EN', url_for( :locale => 'en_CA' )%>
				</p>
			</header>	
	
			<!-- NAVIGATION -->		
			<nav id="primary">
				<ul>
					<li><%= link_to((t :home), root_path) %></li>
					<li><%= link_to((t :about), apropos_path) %></li>
					<li><%= link_to((t :products), produits_path) %></li>
					<li><%= link_to((t :automation), automatisation_path) %></li>
					<li><%= link_to((t :contact), contact_path) %></li>
				</ul>												
			</nav>
			<!-- END NAVIGATION -->
			
		</div>
		<!-- END CENTRAL HEADER -->
		
	</div>
	<!-- END HEADER -->
	
	
	<!-- MAIN CONTENT -->
	<div id="wrap">
		<%= yield %>
	</div>
	<!-- END MAIN CONTENT -->
		
		
		
	<!-- BEGIN FOOTER -->	
	<div id="footer">
		
		<footer id="central_footer">		
				<section id="ft_expertise">
					<header><h1><%=t :expertise%></h1></header>
					<article>
						<p><a href=""><%=t :home_cinema%></a></p>
						<p><a href=""><%=t :multi_room%></a></p>
						<p><a href=""><%=t :hifi%></a></p>
						<p><a href=""><%=t :commercial%></a></p>
						<p><a href=""><%=t :surveillance%></a></p>
						<p><a href=""><%=t :ligthing%></a></p>
						<p><a href=""><%=t :acoustic%></a></p>
						<p><a href=""><%=t :automation%></a></p>																														
						<p><a href=""><%=t :calibration%></a></p>						
						<p><a href=""><%=t :conference%></a></p>						
					</article>
				</section>
				<section id="ft_automatisation">
					<header><h1><%=t :automation%></h1></header>
					<article>
						<p><a href="">AMX</a></p>
						<p><a href="">Vantage</p>
						<p><a href=""><%=t :other_systems%></a></p>
					</article>

					<section id="ft_certification">
						<header><h1><%=t :certification%></h1></header>
						<article>
							<a href="http://www.imagingscience.com/" target="_blank" id="ft_isf"></a>
							<a href="http://www.cedia.net/" target="_blank" id="ft_cedia"></a>
							<a href="http://www.homeacoustics.net/" target="_blank" id="ft_haa"></a>
						</article>
					</section>
					
				</section>
				
				
				<section id="ft_newsletter">
					<header><h1><%=t :newsletter%></h1></header>
					<article>
						<p>
							<%=t :newsletter_stay_informed%><br />
						    <%=t :newsletter_on_new_products%>
						</p>
						<br />
						<div id="form_newsletter">
							<form>
								<label for="email">Inscription Newsletter</label><br />
								<input type="text" id="email" name="email" value="--<%=t :newsletter_email%>--" onFocus="resetField()"></input>
								<a href="#" id="bt_submit" onClick="document.getElementById('form').submit()">ok</a>
							</form>
						</div>
					</article>
					
					<section id="ft_tweets">
						<header><h1><%=t :last_tweet%></h1></header>
						<article id="last_tweet">
						</article>
					</section>
					
				</section>
				

				
				<section id="ft_contact">
					<header><h1><%=t :contact%></h1></header>
					<article>
						<h3><%=t :find_us%></h3>
						<p>
							3256 Grande Allée<br />
							St-Hubert (Longueuil)<br />
							Qc Canada
						</p>
						<a href="http://g.co/maps/9pr7b" target="_blank" title="Google Maps" id="maps"></a>
						<br />
						<br />
						<br />
						<br />
					</article>
					<article id="questions">
						<h3><%=t :questions%></h3>
						<p>
							<%=t :contact_us%>
						</p>
						<h2>1 888 678 3430</h2>
					</article>
				</section>
			
			
				<section id="copyright">
					<p><a href=""><%=t :legal%></a> | &copy; 2011 Brosseau. <%=t :rights%> -</p>
					<p><a href="http://agenceneos.com" target="_blank" id="tag_neos"></a></p>
				</section>
		</footer>
			
	</div>
	<!-- END FOOTER -->

	<!-- The JavaScript -->
 	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script src="javascripts/jquery.bgpos.js"></script>
	<script src="javascripts/jquery.easing-1.3.pack.js"></script>
	<script src="javascripts/easySlider1.7.js"></script>
	<script src="javascripts/application.js"></script>
	

	
</body>
</html>